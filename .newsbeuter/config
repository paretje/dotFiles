bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key j down article
bind-key k up article
bind-key J next article
bind-key K prev article
bind-key j down help
bind-key k up help

bind-key g home
bind-key G end

bind-key f goto-url

bind-key h toggle-show-read-feeds
bind-key l open

bind-key ^F reload-all
bind-key d pagedown
bind-key u pageup

reload-threads 4

always-display-description true

articlelist-format "%f %D  %?T?|%-10T|  &?%t"
feedlist-format "%n %11u %t"
datetime-format "%R %b %d"

browser "qutebrowser"

show-read-feeds no

keep-articles-days 14

goto-next-feed no

prepopulate-query-feeds yes

include "~/.newsbeuter/filter"

macro , set browser "curl --compressed --silent %u | readability -p article /dev/stdin | lynx -stdin -dump -force_html -width=72 -pseudo_inlines=off -localhost -cfg ~/.lynx.cfg | less -ic" ; open-in-browser ; set browser "qutebrowser"
macro o set browser "curl --compressed --silent %u | readability -p article /dev/stdin | w3m-col -T text/html" ; open-in-browser ; set browser "qutebrowser"
