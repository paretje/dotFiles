#!/bin/sh
qutebrowser() {
	"$HOME/.zplug/bin/qutebrowser" "$@" > /dev/null 2>&1 &
}

clean_history() {
	rm -rf "$HOME/.local/share/qutebrowser/offline-storage"
	sed -i '/^:open/d' "$HOME/.local/share/qutebrowser/cmd-history"
}

if [ "$(pgrep -c qutebrowser)" -gt 1 ] || echo "$1" | grep -q '^-'; then
	qutebrowser "$@"
elif 3gusage; then
	clean_history
	qutebrowser :history-clear "$@"
else
	clean_history
	qutebrowser :history-clear :adblock-update "$@"
fi

exit
