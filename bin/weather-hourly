#!/bin/sh
case "$1" in
        ""|Gent)
                id="2797656"
                ;;
        Antwerpen)
                id="2803138"
                ;;
        Veurne)
                id="2784804"
                ;;
        *)
                exit 1
                ;;
esac

exec curl -s "https://forecast.buienradar.nl/2.0/forecast/$id" | jq --raw-output --unbuffered '.days[].hours[] | "\(.datetime | sub("T"; " "))\t\(.temperature) Â°C\t\t\(.precipitationmm) mm"' | head -24
