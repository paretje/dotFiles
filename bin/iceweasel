#!/bin/sh
if [ -f /sys/class/net/ppp0/statistics/rx_bytes -o \
		\( -f /sys/class/net/wlan0/statistics/rx_bytes \
		-a "$(/sbin/iwgetid)"='wlan0     ESSID:"LG-E410i_7795"' \) ]; then
	nc -z 127.0.0.1 1080 || autossh -CTND 1080 paretje.online-urbanus.be &
	exec tsocks /usr/bin/iceweasel "$@"
else
	exec /usr/bin/iceweasel "$@"
fi
