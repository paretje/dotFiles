#!/bin/bash
choice=$(echo -e "logout\nshutdown\nreboot\nsuspend\nhibernate" | dmenu)
mod="Control_R"

case "$choice" in
	logout)
		xdotool key $mod+ctrl+shift+q &
		;;
	shutdown)
		test -x /usr/bin/nmcli && nmcli device disconnect wlan0
		systemctl poweroff &
		;;
	reboot)
		test -x /usr/bin/nmcli && nmcli device disconnect wlan0
		systemctl reboot &
		;;
	suspend)
		systemctl suspend &
		;;
	hibernate)
		systemctl hibernate &
		;;
esac
