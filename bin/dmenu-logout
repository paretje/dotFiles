#!/bin/bash
choice=$(echo -e "logout\nshutdown\nreboot\nsuspend\nhibernate" | dmenu)
mod="Control_R"

case "$choice" in
	logout)
		xdotool key $mod+ctrl+shift+q &
		;;
	shutdown)
		if [ -x /usr/bin/nmcli ]; then
			nmcli device | fgrep connected | sed 's/^\([a-z0-9]*\).*/\1/' | xargs nmcli device disconnect
		fi
		if [ -x /bin/systemctl ]; then
			systemctl poweroff &
		else
			gksudo -- shutdown -h now
		fi
		;;
	reboot)
		if [ -x /usr/bin/nmcli ]; then
			nmcli device | fgrep connected | sed 's/^\([a-z0-9]*\).*/\1/' | xargs nmcli device disconnect
		fi
		if [ -x /bin/systemctl ]; then
			systemctl reboot &
		else
			gksudo -- shutdown -r now
		fi
		;;
	suspend)
		if [ -x /bin/systemctl ]; then
			systemctl suspend &
		else
			gksudo pm-suspend &
		fi
		;;
	hibernate)
		if [ -x /bin/systemctl ]; then
			systemctl hibernate &
		else
			gksudo pm-hibernate &
		fi
		;;
esac
