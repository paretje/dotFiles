#!/bin/sh
if [ $# -eq 1 ]; then
	tmp=$(mktemp)
	dir="$1"
	file=""
	if [ -f "$1" ]; then
		dir="$(dirname "$1")"
	fi
	cd "$dir"
	ls -1v | grep -i '.jpg\|png$' > $tmp
	if [ -f "$1" ]; then
		number=$(fgrep -n -m 1 -x "$(basename "$1")" $tmp | cut -d: -f1)
		if [ "$number" != "" ]; then
			file="-n $number"
		fi
	fi
	cat $tmp | /usr/bin/sxiv -i $file
	rm $tmp
else
	exec /usr/bin/sxiv "$@"
fi
