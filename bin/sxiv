#!/bin/sh
if [ $# -eq 1 ]; then
	tmp=mktemp
	dir="$1"
	file=""
	if [ -f "$1" ]; then
		dir="$(dirname "$1")"
	fi
	cd "$dir"
	ls -1v | grep '.jpg\|png$' > $tmp
	if [ -f "$1" ]; then
		file="-n $(fgrep -n -m 1 -x "$(basename "$1")" $tmp | cut -d: -f1)"
	fi
	cat $tmp | /usr/bin/sxiv -i $file
	rm $tmp
else
	exec /usr/bin/sxiv "$@"
fi
