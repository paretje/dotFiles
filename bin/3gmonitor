#!/bin/sh
USAGE=$(3gusage)
echo $USAGE
if [ -f /sys/class/net/ppp0/statistics/rx_bytes ] ; then
	ORDER=$(echo $USAGE | cut -d ' ' -f2)
	SIZE=$(echo $USAGE | cut -d '.' -f1)
	if [ "$ORDER" = "MiB" -a $SIZE -gt 50 ]; then
		notify-send 'Bandwidth used!'
	fi
fi
if [ "$USAGE" != "" ]; then
	sshproxy sshproxy@vps.online-urbanus.be 1080
fi
