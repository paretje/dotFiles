#!/bin/sh
SRC='src'
TEST='test'
DEBUG='build/debug'
TEST_DEBUG='build/test'

if [ "$1" = "--test" ]; then
	SRCPATH="$SRC:$TEST"
	CLASSPATH="/usr/share/java/junit4.jar:$DEBUG:$TEST_DEBUG"
	shift
	MAIN="org.junit.runner.JUnitCore $@"

else
	SRCPATH="$SRC"
	CLASSPATH="$DEBUG"
	MAIN="$@"
fi

rlwrap -f tags jdb -sourcepath $SRCPATH -classpath $CLASSPATH $MAIN
