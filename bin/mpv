#!/bin/sh
files=0
started=false
for var in "$@"; do
	if $started; then
		files=$((files+1))
	elif [ "$var" = "--" ]; then
		started=true
	fi
done

if [ $files -gt 1 ]; then
	pkill -u $USER -USR1 dunst
	/usr/bin/mpv --no-resume-playback "$@"
	pkill -u $USER -USR2 dunst
else
	pkill -u $USER -USR1 dunst
	/usr/bin/mpv "$@"
	pkill -u $USER -USR2 dunst
fi
