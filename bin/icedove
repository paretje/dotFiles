#!/bin/sh
if [ -f /sys/class/net/ppp0/statistics/rx_bytes ] || /sbin/iwgetid | fgrep 'LG-E410i_7795' > /dev/null; then
	sshproxy sshproxy@vps.online-urbanus.be 1080
	cat > $HOME/.tsocks.conf <<EOF
server = 127.0.0.1
server_type = 5
server_port = 1080
EOF
	exec tsocks /usr/bin/icedove "$@"
else
	if /sbin/iwgetid | fgrep 'bewan_wifi' > /dev/null && ! nc -z 127.0.0.1 1143; then
		davmail > /dev/null &
	fi
	exec /usr/bin/icedove "$@"
fi
