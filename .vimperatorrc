set hintchars=hjklasdf
set hintmatching=firstletters
set hintinputs=
set editor=urxvt\ -e\ nvim
set complete=l
set defsearch=duckduckgo
set toolbars=addons,nobookmarks,nomenu,nonavigation,tabs
set focuscontent=true

nnoremap d <C-D>
nnoremap x :tabclose<CR>
nnoremap u <C-u>
nnoremap X :undo<CR>
nnoremap s :stop<CR>
nnoremap j 2j
nnoremap k 2k
nnoremap p :open <C-V><CR>
nnoremap P :tabopen <C-V><CR>
nnoremap af ;F

cnoremap <C-P> <Up>
cnoremap <C-N> <Down>

command! q winclose

" vim: set ft=vimperator:
